<h1><%= @organisation.name+" jobs" %></h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.name %></td>
        <td><%= link_to 'Show', organisation_job_path(@organisation, job) %></td>
        <td><%= link_to 'Edit', edit_organisation_job_path(@organisation, job) %></td>
        <td><%= link_to 'Destroy', organisation_job_path(@organisation, job), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New job', new_organisation_job_path %>
